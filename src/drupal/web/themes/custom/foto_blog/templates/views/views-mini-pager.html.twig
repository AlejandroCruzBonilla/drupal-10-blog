{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
	<nav
		role="navigation"
		aria-labelledby="{{ heading_id }}"
		class="mini-pagination"
	>
		<ul
			class="js-pager__items mini-pagination__list">
			{% if items.previous %}
				<li
					class="mini-pagination__prev">
					<a
						{{ items.previous.attributes|without('href', 'title', 'rel', 'class') }}
						class="mini-pagination__link"
						href="{{ items.previous.href }}"
						title="{{ 'Go to previous page'|t }}"
						rel="prev"
					>
						{{ items.previous.text|default('‹‹'|t) }}
					</a>
				</li>
			{% endif %}
			{% if items.current %}
				<li
					class="mini-pagination__current">
					{% trans %}
						{{ items.current }}
					{% endtrans %}
				</li>
			{% endif %}
			{% if items.next %}
				<li
					class="mini-pagination__next">
					<a
						{{ items.next.attributes|without('href', 'title', 'rel', 'class') }}
						class="mini-pagination__link"
						href="{{ items.next.href }}"
						title="{{ 'Go to next page'|t }}"
						rel="next"						
					>
						{{ items.next.text|default('››'|t) }}
					</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
